@import '../styl/_mixins.styl'

.page
  // padding: 0 1rem;
  header
    padding: 1rem;
    box-sizing: border-box;
    +on-mobile()
      height: calc(100vh - 70px)
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    h1
      font-size: 2.8rem; 
      font-weight: 300;
      margin: 0 auto
      text-align: center;
    p
      font-family: 'Roboto Slab';
      font-size: 1.4rem;
      color: #666;
      line-height: 1.3;
      text-align: justify;
      +on-mobile()
        font-size: 1.2rem;

    a.cta
      display: block;
      margin: 0 auto;
      padding: 0.5rem
      width: 200px;
      text-align: center;
      border: 1px solid;
      font-size: 1.2rem;
      border-radius: 25px


    